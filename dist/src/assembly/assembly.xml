<assembly>
    <id>dist</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <!-- create empty bin directory -->
        <fileSet>
            <directory>${project.basedir}/src/assembly</directory>
            <outputDirectory>bin</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
        <!-- create empty log directory -->
        <fileSet>
            <directory>${project.basedir}/src/assembly</directory>
            <outputDirectory>log</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
        <!-- create empty conf directory -->
        <fileSet>
            <directory>${project.basedir}/src/assembly</directory>
            <outputDirectory>conf</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <files>
        <!-- copy client jar to lib -->
        <file>
            <source>${project.basedir}/../client/target/dongting-client-${project.version}.jar</source>
            <outputDirectory>lib</outputDirectory>
        </file>
        <!-- copy server jar to lib -->
        <file>
            <source>${project.basedir}/../server/target/dongting-server-${project.version}.jar</source>
            <outputDirectory>lib</outputDirectory>
        </file>
        <!-- copy ops jar to lib -->
        <file>
            <source>${project.basedir}/../ops/target/dongting-ops-${project.version}.jar</source>
            <outputDirectory>lib</outputDirectory>
        </file>
    </files>
</assembly>
